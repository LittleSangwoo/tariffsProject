<Page x:Class="WpfApp2.Comapison"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Comapison" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left" Margin="32,26,0,0" TextWrapping="Wrap" Text="Сравнение тарифов" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,66,0,0" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Количество минут,"/><LineBreak/><Run Text=" шт."/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="320,66,0,0" TextWrapping="Wrap" Text="Количество смс, шт." VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="470,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Интернет-трафик, "/><LineBreak/><Run Text="ГБ"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="620,66,0,0" TextWrapping="Wrap" Text="Итоговая стоимость, руб." VerticalAlignment="Top"/>

        <Button Content="Назад" HorizontalAlignment="Left" Margin="800,14,0,0" VerticalAlignment="Top" Click="Back_Click" Width="60"/>

        <ItemsControl  ItemsSource="{Binding view}" Margin="-700 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="120">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="4 0" Background="#e0e0e0">
                            <TextBlock Text="{Binding name}" FontWeight="Bold" HorizontalAlignment="Left" Margin="0 0 0 5"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  ItemsSource="{Binding view}" Margin="-400 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="120">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="4 0" Background="#e0e0e0">
                            <TextBlock Text="{Binding minutes}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 0 5"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  ItemsSource="{Binding view}" Margin="-100 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="120">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="4 0" Background="#e0e0e0">
                            <TextBlock Text="{Binding sms}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 0 5"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  ItemsSource="{Binding view}" Margin="200 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="120">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="4 0" Background="#e0e0e0">
                            <TextBlock Text="{Binding gb}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 0 5"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  ItemsSource="{Binding view}" Margin="500 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="120">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="4 0" Background="#e0e0e0">
                            <TextBlock Text="{Binding price}" FontWeight="Bold" HorizontalAlignment="Right" Margin="0 0 0 5"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl  ItemsSource="{Binding view}" Margin="800 110 0 0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0 0 0 20" Width="60">
                        <Button Content="Заказать" x:Name="order" Padding="4 0 4 5" Click="OrderTariff_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
