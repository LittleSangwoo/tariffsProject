<Page x:Class="WpfApp2.Calculator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="Calculator">

    <Grid Margin="20 10 0 0" Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>


        <TextBlock Text="КАЛЬКУЛЯТОР ТАРИФОВ" Grid.Column="0" Grid.Row="0"/>
        <Button Content="Назад" Grid.Column="1" HorizontalAlignment="Left"  VerticalAlignment="Center"
            Click="BackPage" Margin="75,0,0,0"/>

        <ComboBox Grid.Row="1"
                  Grid.Column="0"
                  x:Name="comboBoxTariffs"
                  Margin="0,10,0,0"
                  SelectionChanged="comboBoxTariffs_SelectionChanged"/>

        <TextBlock Text="Количество минут, шт." Margin="0,31,0,116" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,32,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
                 x:Name="textBoxMinutes" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" Background="#F0F0F0"/>

        <TextBlock Text="Количество СМС, шт." Margin="0,50,0,97" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,49,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
         x:Name="textBoxSms" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" Background="#F0F0F0"/>

        <TextBlock Text="Интернет-трафик, ГБ" Margin="0,68,0,81" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,66,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
        x:Name="textBoxGb" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" Background="#F0F0F0"/>


        <TextBlock Text="Доп. минут, шт." Margin="0,110,0,36" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,113,0,0" Grid.Row="3"  Text="" VerticalAlignment="Top" Width="75"
        x:Name="textBoxAddMinutes" BorderBrush="Black" BorderThickness="1" TextChanged="textBoxAddMinutes_TextChanged"/>

        <TextBlock Text="Доп. SMS, шт."   Margin="0,129,0,20" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,129,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
        x:Name="textBoxAddSms" BorderBrush="Black" BorderThickness="1" TextChanged="textBoxAddMinutes_TextChanged"/>

        <TextBlock Text="Доп. трафик, ГБ."     Margin="0,147,0,-1" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,146,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
        x:Name="textBoxAddGb" BorderBrush="Black" BorderThickness="1" TextChanged="textBoxAddMinutes_TextChanged"/>

        <TextBlock Text="Стоимость, руб./мес." Margin="0,192,0,46" Grid.Row="3"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="0,192,0,0" Grid.Row="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75"
        x:Name="finalPrice" BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>
        
        <Button Content="Добавить в сравнение"
                HorizontalAlignment="Left"
                Margin="0,15,0,0"
                Grid.Row="4"
                VerticalAlignment="Top"
                Width="150"
                Click="AddToComparison_Click"/>
        <Button Content="Перейти к сравнению"
                HorizontalAlignment="Left"
                Margin="10,15,0,0"
                Grid.Row="4"
                VerticalAlignment="Top"
                Width="150"
                Grid.Column="1"
                Click="OpenComparison_Click"/>
    </Grid>
</Page>
